JENKINS_URL=http://your-jenkins:8080
JENKINS_USER=your-username
JENKINS_TOKEN=your-api-token

# MCP transport: "http" (default, Streamable HTTP) or "stdio" (Cursor/Claude Desktop).
MCP_TRANSPORT=http
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Set to "false" to disable SSL certificate verification when Jenkins uses HTTPS
# with a self-signed or internal CA certificate. Never disable in production.
JENKINS_VERIFY_SSL=true

# Delay between tool calls (seconds) to avoid hitting AI provider TPM limits.
# Default: 2. Set to 0 to disable during testing.
TOOL_DELAY_SECONDS=2
